

<div class="media">
  <div class="media-left">
    <div class="profile">

    <!-- <a href="#">
      <img class="media-object" src="..." alt="Generic placeholder image">
    </a> -->
    <% if comment.user.image.file? %>
      <%= image_tag comment.user.image.url(:tiny), class: "media-object" %>
    <% else %>
      <%= image_tag("missing.png") %>
    <% end %>
  </div>
</div>
  <div class="media-body">
    <h4 class="media-heading"><strong><%= comment.user.username %></strong></h4>
    <p><%= comment.body %></p>
  </div>
  <% if user_signed_in? and comment.user_id == current_user.id %>
	<li>
	  <%= link_to 'Delete Comment', [comment.article, comment],
	               method: :delete,
	               data: { confirm: 'Are you sure?' }, class: "btn" %>
	</li>
<% end %>

<br><br>
</div>
