<h1>Welcome to Echo</h1>


<h3>Latest News </h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= image_tag article.image.url(:thumb)%></td>
        <td><%= link_to 'Read more', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>
