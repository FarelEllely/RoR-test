<h1>Admin Panel</h1>

<h3>Users</h3>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Username</th>
      <th>Status</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="bg-success">
        <% if user.admin? %>
          <th scope="row"></th>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td>Admin</td>
          <td><%= link_to 'Destroy', registration_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <th scope="row"></th>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td>Regular</td>
          <td>Delete</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
