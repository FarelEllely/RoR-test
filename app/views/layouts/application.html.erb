<!DOCTYPE html>
<html>
  <head>
    <title>Echo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- HEADER -->
    <nav class="navbar navbar-light bg-faded">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
        <%= link_to 'Echo', root_path, class: "navbar-brand" %>
          <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-left">
              <li class="nav-item active">
                <%= link_to 'Home', root_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'News', articles_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'About', about_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Contact', contact_path, class: "nav-link" %>
              </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="nav-item"><%=link_to edit_user_registration_path do %>
                      <%= image_tag current_user.image.url(:thumb) %>
                    <% end %>
                </li>
                <li class="nav-item"><%= link_to current_user.email, edit_user_registration_path  %></li>
                <%#= link_to 'Forum', conversations_path %>
                <% if current_user.admin? %>
                  <li class="nav-item"><%= link_to 'Admin Panel', admin_panel_path %></li>
                <% end %>
                <li class="nav-item"><%= link_to 'log out', destroy_user_session_path, :method => :delete %></li>
              <% else %>
                <li class="nav-item"><%= link_to 'log in', new_user_session_path %></li>
                <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
</nav>



  <div class="menu_1">
    <% @category.each do |c| %>
      <li><%= link_to c.name, articles_path(:category=>c.id) %></li>
    <% end %>

  </div>

  <!-- BODY -->


        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>



  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="wrapper">
  		    <%= yield %>
        </div>
      </div>



        <div class="col-md-4">
          <!-- <div class="Ads">

          </div> -->
      </div>

    </div>
  </div>

      <!-- FOOTER -->

      <div class="container-fluid">
            <hr>
              <div class="row">
                  <div class="col-lg-12">
                      <ul class="nav nav-pills nav-justified">
                          <li><a href="/">Â© 2016 Company Name.</a></li>
                          <li><a href="#">Terms of Service</a></li>
                          <li><a href="#">Privacy</a></li>
                      </ul>
                  </div>
              </div>
          </div>

  </body>
</html>
